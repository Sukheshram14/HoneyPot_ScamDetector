{
    "manifest_version": 3,
    "name": "HoneyPot AI - Scam Detector",
    "version": "1.0",
    "description": "Real-time scam detection and analysis for WhatsApp Web using HoneyPot AI.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "utils.js",
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}